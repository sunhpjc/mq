<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunhp.rocketmq.dao.SmsDao">

    <sql id="Base_Column_List">
	id,
	batchNo,
	phone,
	content,
	`status`
</sql>
    <resultMap type="com.sunhp.rocketmq.entity.Sms" id="SmsMap">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="batchNo" column="batchNo" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" parameterType="java.lang.Long" resultMap="SmsMap">
        select
          id, batchNo, phone, content, status
        from springboot.sms
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SmsMap">
        select
          id, batchNo, phone, content, status
        from springboot.sms
        where status = #{status}
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SmsMap">
        select
          id, batchNo, phone, content, status
        from springboot.sms
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="batchNo != null and batchNo != ''">
                and batchNo = #{batchNo}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into springboot.sms(batchNo, phone, content, status)
        values (#{batchNo}, #{phone}, #{content}, #{status})
    </insert>
    <insert id="insertBatch" parameterType="java.util.ArrayList">
        insert into sms(batchNo, phone, content, status)
        values 
        <foreach collection="list" index="index" item="item" separator=",">
            (#{item.batchNo}, #{item.phone},#{item.content},0)
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update springboot.sms
        <set>
            <if test="batchNo != null and batchNo != ''">
                batchNo = #{batchNo},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from springboot.sms where id = #{id}
    </delete>
    <!--流式查询数据-->
    <select id="smsCursor" resultMap="SmsMap">
        select
        <include refid="Base_Column_List"></include>
        from
        sms
        where status = 0
        limit #{limit}
    </select>
    <update id="updateBatch" parameterType="java.util.Map">
        update sms
        set status = #{status}
        where id in
        <foreach collection="smsList" item="sms" open="(" close=")" separator=",">
            #{sms.id}
        </foreach>
    </update>
    <update id="updateWithStatus">
        update sms
        set status = #{param2}
        where id = #{param1.id}
    </update>
    <select id="queryAllXXLJob" resultMap="SmsMap">
        select
        <include refid="Base_Column_List"></include>
        from sms
        where status = 0
        and mod(id,#{shardTotal}) = #{shardIndex}
        order by id desc
        limit 5
    </select>
    <select id="smsCursorBack" resultMap="SmsMap">
        select
        <include refid="Base_Column_List"></include>
        from
        sms
        where status = 0
    </select>
    <select id="smsBack" resultMap="SmsMap">
        select
        <include refid="Base_Column_List"></include>
        from
        sms
        where status = 0
    </select>

</mapper>